<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>   
    <%= link_to "#{@pin.url}", "#{@pin.url}", html_options = {target: "_blank", class: "url"} %>
  </p>
  <% unless @pin.image.url.nil? %>
    <img src="<%= @pin.image.url(:medium) %>">
  <% end %>
</div>
<br/>
<a href="/">
  <i class="fa fa-chevron-circle-left"></i>
  Back to Home
</a>
